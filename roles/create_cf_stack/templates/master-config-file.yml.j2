{% include 'cloud-init-common.yml.j2' %}
    - name: docker-swarm.service
      command: start
      content: |
        [Unit]
        Description=Swarm service
        After=docker.service

        [Service]
        Restart=yes
        ExecStart=/usr/bin/docker run --name docker-swarm -d -p 2375:2375 swarm manage etcd://${{ advertised_ip_address }}_ipv4:2379/swarm
